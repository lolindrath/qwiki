<% form_for(@page, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <%= link_to 'Markdown', '/markdown-reference/index.html', :popup => ['markdown_reference', 'height=400,width=600,scrollbars=1'] %>
 <table>
    <tr>
      <td class="span-9" style="vertical-align: top;">
        <div id="wmd-button-bar"></div>
        <%= f.text_area :body, :id => 'wmd-input' %><br />
        <%= f.label :edit_summary %><br />
        <%= f.text_field :edit_summary %><br />
      </td>
      <td class="span-8"  style="vertical-align: top;">
        <div id="wmd-preview" class="wikistyle"></div>
      </td>
    </tr>
  </table>
  <p>Pending Attachments: 
        <input id="newfile_data" type="file" />
      <div id="attachment_list"><ul id="pending_files"></ul></div>
<script type="text/javascript">

          var multi_selector = new MultiSelector($('pending_files'), <%= 5  %>);

          multi_selector.addElement($('newfile_data'));

      </script>
      
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
<%= link_to 'Back', pages_path %>

